#!/usr/bin/env bash
#/ Return how many of the supplied keys exist in the store.
#/
#/ Usage: kv-exists <key> [<key> ...]
#/
#/ Options:
#/    -h, --help      Print this help and exit
#/
#/ Examples:
#/    kv-exists --help
#/    kv-exists key1 key2
set -euo pipefail
HERE="$(cd "$(dirname "$0")" && pwd)"
. "$HERE/../lib/envdb"

usage() {
  grep '^#/ ' < "$0" | cut -c4- | sed "s/\$(basename \"\$0\")/${0##*/}/g"
  exit 0
}

main() {
  if [ $# -eq 1 ] && [[ "$1" == "-h" || "$1" == "--help" ]]; then
    usage
  fi

  [ $# -ge 1 ] || { usage; exit 2; }
  init_db
  local sum=0
  for key in "$@"; do
    if key_exists "$key"; then
      sum=$((sum+1))
    fi
  done
  echo "$sum"
}

main "$@"
