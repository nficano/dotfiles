#!/bin/bash
#/ Print the nth line from stdin.
#/
#/ Usage: text-line <line-number>

if [ "$#" -ne 1 ]; then
  echo "Usage: text-line <line-number>" >&2
  exit 1
fi

if [ "$1" = "--help" ] || [ "$1" = "-h" ]; then
  echo "Usage: text-line <line-number>" >&2
  exit 0
fi

line_number=$1

head -n "$line_number" | tail -n 1
