#!/bin/sh
#/ Extract common compressed archive formats.
#/
#/ EXTENSION SUPPORT:
#/  7z, bz2, gz, rar, tar, tar.bz2, tar.gz, tbz2, tgz, Z, zip
#/
#/ USAGE:
#/    archive-extract <archive_file>
#/
#/ EXAMPLES:
#/    archive-extract my-archive.7z
#/    archive-extract my-archive.bz2
#/    archive-extract my-archive.gz
#/    archive-extract my-archive.rar
#/    archive-extract my-archive.tar
#/    archive-extract my-archive.tar.bz2
#/    archive-extract my-archive.tar.gz
#/    archive-extract my-archive.tbz2
#/    archive-extract my-archive.tgz
#/    archive-extract my-archive.Z
#/    archive-extract my-archive.zip

set -o errexit # Exit on most errors (see the manual)
set -o nounset # Disallow expansion of unset variables
#set -o errtrace        # Make sure any error trap is inherited (BASH only)
#set -o pipefail        # Use last non-zero exit code in a pipeline (BASH only)
#set -o xtrace          # Trace the execution of the script (UNCOMMENT TO DEBUG)

if [ -f "$1" ]; then
  case "$1" in
  *.tar.bz2) tar xjf "$1" ;;
  *.tar.gz) tar xzf "$1" ;;
  *.bz2) bunzip2 "$1" ;;
  *.rar) unrar e "$1" ;;
  *.gz) gunzip "$1" ;;
  *.tar) tar xf "$1" ;;
  *.tbz2) tar xjf "$1" ;;
  *.tgz) tar xzf "$1" ;;
  *.zip) unzip "$1" ;;
  *.Z) uncompress "$1" ;;
  *.7z) 7z x "$1" ;;
  *)
    echo "$1: failed to extract"
    ;;
  esac
else
  echo "$1' is not a valid file"
fi
