#!/usr/bin/env bash
# Search for files by type.
#
# Usage: $(basename "$0") <extension>
#
# Options:
#   -h    Show this help message

usage() {
    grep '^# ' "$0" | cut -c3-
    exit 0
}

while getopts "h" opt; do
    case "$opt" in
        h) usage ;;
        *) usage ;;
    esac
done

find . -type f -name "*.$@"
