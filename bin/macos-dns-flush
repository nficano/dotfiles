#!/usr/bin/env bash
#/ Flush the macOS DNS cache to force fresh name resolution.
#/
#/ Usage: $(basename "$0") [-h] [-v]
#/
#/ Available options:
#/    -h, --help      Print this help and exit
#/    -v, --verbose   Enable verbose output
#/
#/ Details:
#/    Runs dscacheutil and signals mDNSResponder to rebuild caches.

set -Eeuo pipefail
trap script.cleanup SIGINT SIGTERM ERR EXIT

source "$(dirname "$0")/../lib/bash/initrc"

script_dir=$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd -P)

verbose=0

parse_args() {
  local remaining
  remaining=$(script.parse_common "$@")

  if [[ -n "$remaining" ]]; then
    log.error "This script does not accept positional arguments"
    script.usage 1
  fi
}

main() {
  (( verbose )) && log.info "Flushing DNS caches"

  sudo dscacheutil -flushcache
  sudo killall -HUP mDNSResponder

  log.info "macOS DNS cache flushed"
}

parse_args "$@"
main
