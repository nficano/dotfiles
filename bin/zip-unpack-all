#!/bin/sh
#/ Unzip every .zip file in the current directory into matching folders.
#/ NAME
#/      {{ basename }} -- unzip all files in a given directory
#/
#/ SYNOPSIS
#/      {{ basename }} [-h] [--help]
#/
#/ DESCRIPTION
#/      Scans a directory for zip files and unzips them to a new subfolder

set -o errexit # Exit on most errors (see the manual)
set -o nounset # Disallow expansion of unset variables
#set -o errtrace        # Make sure any error trap is inherited (BASH only)
#set -o pipefail        # Use last non-zero exit code in a pipeline (BASH only)
#set -o xtrace          # Trace the execution of the script (UNCOMMENT TO DEBUG)

usage() {
    grep '^#/ ' <"$0" | cut -c4- | sed "s/{{ basename }}/${0##*/}/"
    exit 1
}

[ $# -ne 0 ] && usage

for file in *.zip; do
    folder="${file%.*}"
    mkdir -p "$folder"
    unzip -n "$file" -d "$folder"
    #rm "$file"
done
