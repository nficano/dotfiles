[column]
	ui = auto

[include]
	path = ~/.gitconfig.local

[apply]
	whitespace = nowarn

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[branch]
	sort = -committerdate

[merge]
	summary = true
	ff = false

[diff]
	tool = difftool
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true

[diff]
  tool = default-difftool

[difftool "default-difftool"]
  cmd = cursor --wait --diff $LOCAL $REMOTE

[merge]
  tool = cursor

[mergetool "cursor"]
  cmd = cursor --wait --merge $REMOTE $LOCAL $BASE $MERGED

[help]
	autocorrect = prompt

[fetch]
	prune = true
	pruneTags = true
	all = true

[core]
	editor = cursor --wait --new-window
	excludesFile = ~/.gitignore-global
	autoSquash = true
	autoStash = true
	updateRefs = true
  fsmonitor = true
  untrackedCache = true
	excludesfile = ~/.gitignore
	autocrlf = input
	pager = diff-so-fancy | less --tabs=4 -RFX
	editor = cursor --wait

[push]
	default = simple
	autoSetupRemote = true
	followTags = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[pull]
	rebase = true

[commit]
	template = ~/.gitmessage
	verbose = true

[rerere]
	enabled = true
	autoupdate = true
	autoStash = true

[init]
	defaultBranch = main

